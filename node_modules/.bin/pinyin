#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/dddd/git/Yunzai/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="$NODE_PATH:/mnt/d/dddd/git/Yunzai/node_modules/.pnpm/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../node_modules/.pnpm/pinyin@2.0.2/node_modules/pinyin/bin/pinyin" "$@"
else
  exec node  "$basedir/../../../../node_modules/.pnpm/pinyin@2.0.2/node_modules/pinyin/bin/pinyin" "$@"
fi
